doctype html
html(lang="en")
  head
    title More About Me
    style.
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      .section {
        margin: 20px 0;
      }
      .list {
        list-style-type: none;
        padding: 0;
      }
      .list li {
        margin: 10px 0;
        padding: 10px;
        background: #f9f9f9;
        border-radius: 5px;
      }
      nav {
        margin: 20px 0;
      }
      .contact-info {
        background: #f5f5f5;
        padding: 15px;
        border-radius: 8px;
        margin: 20px 0;
      }
      .education {
        background: #f5f5f5;
        padding: 15px;
        border-radius: 8px;
        margin: 20px 0;
      }

  body
    include partials/nav

    h1 More About Me

    main
      section.education
        h2 Education
        p
          strong #{extras.education.school}
        p Major: #{extras.education.major}
        p Period: #{extras.education.period}

      section.section
        h2 Working Style
        ul.list
          each style in extras.workingStyle
            li #{style}

      section.section
        h2 Certifications
        ul.list
          each cert in extras.certifications
            li #{cert}

      section.contact-info
        h2 Contact Information
        p
          strong Email: 
          a(href=`mailto:${extras.contact.email}`) #{extras.contact.email}
        p
          strong GitHub: 
          a(href=extras.contact.github) #{extras.contact.github}